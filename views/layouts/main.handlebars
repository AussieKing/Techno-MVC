<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Techno MVC Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css" />
  </head>

  <body class="bg-dark text-white">
    <header>
      <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand fs-2" href="/">Techno MVC Blog</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
                <li class="nav-item">
                  <a class="nav-link" href="/dashboard">Dashboard</a>
                </li>

              {{#if logged_in}}  <!-- if user is logged in, show logout -->
                <li class="nav-item">
                  <a class="nav-link" href="#" id="Blog-logout">Logout</a>
                </li>
              {{else}}   <!-- if user is not logged in, show login/sign up -->
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/signup">Sign Up</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container" style="margin-bottom: 15vh;">
      {{{body}}}  <!-- this is where the content will be injected -->
    </div>

<footer class="bg-dark text-white py-3" style="position: fixed; bottom: 0; width: 100%;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <h5>&copy; Thank you for geeking out with us!</h5>  
      </div>
    </div> 
  </div>
</footer>
    <script src="/js/delete-post.js"></script>
    <script src="/js/login.js"></script>
    <script src="/js/logout.js"></script>
    <script src="/js/new-post.js"></script>
    <script src="/js/signup.js"></script>
    <script src="/js/edit-post.js"></script>
    <script src="/js/new-comment.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>