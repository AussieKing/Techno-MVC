<main class="container mt-5">
  <article>
    <h1>{{title}}</h1>
    <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
    <p>{{content}}</p>
  </article>
  {{#if logged_in}}  <!-- if the user is logged in, they will be able to add a comment -->
    <form class="new-Blog-comment-form" class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Add Comment:</label>
        <textarea class="form-control" id="content-new-Blog-comment" rows="3" placeholder="Leave a comment."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  {{/if}}
  <h2>Previous comments:</h2>  <!-- all comments will be displayed here -->
  {{#each comments}}
    <div class="comment mb-3">
      <p>{{comment_text}}</p>
      <p>By {{user.username}} on {{format_date createdAt}}</p>
    </div>
  {{/each}}
</main>